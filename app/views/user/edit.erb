<div id="wrapper" class="container">
  <div class="col-sm-offset-2 col-sm-8">
    <h3>Edit your details</h3>
    <form action="/user/edit" method="post" class="form-horizontal" role="form">

      <div class="form-group">
        <label for="firstname" class="col-sm-3 control-label">First name</label>
        <div class="col-sm-9">
          <input name="firstname" type="text" class="form-control" id="firstname" value="<%= @user.firstname %>">
        </div>
      </div>

      <div class="form-group">
        <label for="lastname" class="col-sm-3 control-label">Last name</label>
        <div class="col-sm-9">
          <input name="lastname" type="text" class="form-control" id="lastname" value="<%= @user.lastname %>">
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
          <input name="email" type="email" class="form-control" id="email" value="<%= @user.email %>">
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-3 control-label">Password</label>
        <div class="col-sm-9">
          <input name="password" type="password" class="form-control" id="password" placeholder="*******">
        </div>
      </div>

      <div class="form-group">
        <label for="location" class="col-sm-3 control-label">Location</label>
        <div class="col-sm-9">
          <input name="location" type="text" class="form-control" id="location" value="<%= @user.location %>">
        </div>
      </div>

      <div class="form-group">
        <label for="notifications" class="col-sm-3 control-label">Notifications</label>
        <div class="col-sm-9">
          <label>
            <input type="checkbox" value="true" <%= @user.weekly_digest == true ? 'checked' : '' %>>
            Weekly digest&mdash;keep up yourself up-to-date
          </label>
        </div>
      </div>
      
      <div class="form-group">
        <% if @user.FBTokens.nil? %>
          <div id="fb-link" class="btn-fb col-sm-offset-3 btn btn-default"><%= 'Link to Facebook' %></div>
        <% else %>
          <div id="fb-unlink" class="col-sm-offset-3 btn btn-default"><%= 'Unlink with Facebook' %></div>
        <% end %>
      </div>
      <script type="text/javascript"> 

        $(function(){
          $('#fb-unlink').on('click', function() {
            $.ajax({
                url: '/user/facebook/unlink',
                type: 'POST'
            })
            .always(function() {
              document.location.reload(); 
            });
          })
        })
      </script>
      <div class="form-group">
        <button type="submit" class="col-sm-offset-3 btn btn-default">Save</button>
      </div>

    </form>

  </div>
</div>
