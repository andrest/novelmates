<div id="wrapper" class="container-fluid my-meetups">
<div class="col-sm-3">
  <h3><%= @user.firstname+' '+@user.lastname %></h3>
  <div class="profile-picture-wrapper" data-user-id="<%= @user._id %>"></div>
  <hr />

  <table class="">
    <tbody>
      <tr>
        <td>Joined</td>
        <td><%= @user.created_at.to_date.strftime('%d/%m/%Y') %></td>
      </tr>
      <tr>
        <td>Location</td>
        <td><%= @user.location %></td>
      </tr>
      <tr>
        <td>Meetups Attended</td>
        <td><%= @meetups.count %></td>
      </tr>
      <tr>
        <td>Meetups Created</td>
        <td><%= @meetups_created.count %></td>
      </tr>
    </tbody>
  </table>

  <div id="disqus_thread"></div>
  <script type="text/javascript">
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'novelmates'; // required: replace example with your forum shortname
      // var urlArray = document.URL.split(/\/+/);
      var disqus_identifier = "<%= current_user._id %>";
      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
</div>
<div class="col-sm-9">
  <% if signed_in? %>
    <div class="list-group col-md-6">
      <div class="list-group-item list-group-item-info">
        <h4>Created</h4>
      </div>

      <% @meetups_created.each do |meetup|
          @book = BookController.get_book(meetup.books)
      %>
          <div class="list-group-item" style="background:rgb(250, 250, 250) !important;">
            <img class="book-cover" src="<%= @book.images[:medium] %>" >
            <div class="meetup-header">

              <a href="/meetup/<%= meetup._id %>/for/<%= meetup.books %>"><h3><%= meetup.name %></h3></a>

              <% if signed_in? %>
                <div class="btn-group">
                  <button type="button" class="attending btn btn-default <%= 'active' if attending?%>">Attending</button>
                  <button type="button" class="not-attending btn btn-default <%= 'active' if !attending? %>">Not Attending</button>
                </div>
              <% end %>
            </div>

            <span class="pull-right people">

              <% users = meetup.user_ids %>
              <% users.each do |id| %>
                <% next if signed_in? && id == current_user._id %>
                <div class="profile-picture-wrapper" data-user-id="<%= id.to_s %>"></div>
              <% end %>
            </span>
          </div>

      <% end %>
    </div>

    <div class="list-group col-md-6">
      <div class="list-group-item list-group-item-info">
        <h4>Attending</h4>
      </div>
      <%
        @meetups.each do |meetup|
          @book = BookController.get_book(meetup.books)
      %>

        <div class="list-group-item">
          <img class="book-cover" src="<%= @book.images[:medium] %>" >
          <div class="meetup-header">

            <a href="/meetup/<%= meetup._id %>/for/<%= meetup.books %>"><h3><%= meetup.name %></h3></a>

            <% if signed_in? %>
              <div class="btn-group">
                <button type="button" class="attending btn btn-default <%= 'active' if attending?%>">Attending</button>
                <button type="button" class="not-attending btn btn-default <%= 'active' if !attending? %>">Not Attending</button>
              </div>
            <% end %>
          </div>

          <span class="pull-right people">

            <% users = meetup.user_ids %>
            <% users.each do |id| %>
              <% next if signed_in? && id == current_user._id %>
              <div class="profile-picture-wrapper" data-user-id="<%= id.to_s %>"></div>
            <% end %>
          </span>
        </div>

      <% end %>
    </div>

  <% end %>
  </div>
</div>